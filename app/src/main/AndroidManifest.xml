<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appchattest">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".FriendRequestActivity"></activity>
        <activity android:name=".ImageAvatarActivity" />
        <activity android:name=".FindFriendsActivity"
                  android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".MainNavigationActivity" />
        <activity android:name=".SignUpActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".MainAppActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".AccountInfoActivity" />
        <activity
            android:name=".FriendActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>