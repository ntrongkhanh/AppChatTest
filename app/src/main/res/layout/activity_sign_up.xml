<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@color/colorPrimaryDark"
                                                   tools:context=".SignUpActivity">

    <ImageView android:id="@+id/small_icon_register"
               android:layout_marginTop="15dp"
               android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
               android:layout_width="wrap_content"
               android:layout_height="130dp"
               android:src="@drawable/icon_small"
               android:contentDescription="@string/vnme"
               app:layout_constraintBottom_toTopOf="@id/linearLayout" app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/small_icon_register"
            app:layout_constraintStart_toStartOf="parent">

        <EditText
                android:id="@+id/editText_hoten_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="@string/string_ho_ten"
                android:paddingStart="18dp"
                android:paddingTop="8dp"
                android:paddingEnd="18dp"
                android:paddingBottom="8dp"
                android:background="@drawable/round_textbox"
                android:elevation="2dp"
                android:fontFamily="@font/reso"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorNonText"
                android:inputType="textPersonName"
                android:textCursorDrawable="@null"/>

        <EditText
                android:id="@+id/editText_email_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="@string/email"
                android:layout_marginTop="25dp"
                android:paddingStart="18dp"
                android:paddingTop="8dp"
                android:paddingEnd="18dp"
                android:paddingBottom="8dp"
                android:background="@drawable/round_textbox"
                android:elevation="2dp"
                android:fontFamily="@font/reso"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorNonText"
                android:inputType="textPersonName"
                android:textCursorDrawable="@null"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

            <TextView
                    android:id="@+id/textview_Sex"
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:text="@string/string_sex"
                    android:fontFamily="@font/reso"
                    android:textSize="18sp"/>

            <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <RadioButton
                        android:id="@+id/radioButton_nu_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/string_female"
                        android:fontFamily="@font/reso"
                        android:buttonTint="@color/colorPrimary"/>

                <RadioButton
                        android:id="@+id/radioButton_nam_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/string_male"
                        android:fontFamily="@font/reso"
                        android:buttonTint="@color/colorPrimary"/>
            </RadioGroup>

        </LinearLayout> <!-- red element -->

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="@string/string_birth"
                    android:fontFamily="@font/reso"
                    android:textSize="18sp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/editText_ngaysinh_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="15dp"
                        android:paddingStart="18dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="8dp"
                        android:elevation="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorNonText"
                        android:background="@drawable/round_textbox"
                        android:hint="dd"
                        android:maxLines="1"
                        android:maxLength="2"
                        android:ems="10"
                        android:inputType="date"
                        android:fontFamily="@font/reso"
                        android:gravity="center"
                        android:textCursorDrawable="@null"/>

                <EditText
                        android:id="@+id/editText_thangsinh_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="15dp"
                        android:paddingStart="18dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="8dp"
                        android:elevation="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorNonText"
                        android:background="@drawable/round_textbox"
                        android:ems="10"
                        android:hint="MM"
                        android:maxLines="1"
                        android:maxLength="2"
                        android:inputType="date"
                        tools:ignore="Autofill"
                        android:fontFamily="@font/reso"
                        android:gravity="center"
                        android:textCursorDrawable="@null"/>

                <EditText
                        android:id="@+id/editText_namsinh_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="18dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="8dp"
                        android:elevation="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorNonText"
                        android:background="@drawable/round_textbox"
                        android:ems="10"
                        android:hint="yyyy"
                        android:maxLines="1"
                        android:maxLength="4"
                        android:inputType="date"
                        tools:ignore="Autofill,LabelFor"
                        android:fontFamily="@font/reso"
                        android:gravity="center"
                        android:textCursorDrawable="@null"/>
            </LinearLayout>
        </LinearLayout>

        <EditText
                android:id="@+id/editText_matkhau_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:layout_marginTop="25dp"
                android:paddingStart="18dp"
                android:paddingTop="8dp"
                android:paddingEnd="18dp"
                android:paddingBottom="8dp"
                android:background="@drawable/round_textbox"
                android:elevation="2dp"
                android:fontFamily="@font/reso"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorNonText"
                android:hint="@string/hint_enter_password"
                android:inputType="textPassword"
                tools:ignore="Autofill"
                android:textCursorDrawable="@null"/>

        <EditText
                android:id="@+id/editText_matkhaulai_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:layout_marginTop="25dp"
                android:paddingStart="18dp"
                android:paddingTop="8dp"
                android:paddingEnd="18dp"
                android:paddingBottom="8dp"
                android:background="@drawable/round_textbox"
                android:elevation="2dp"
                android:fontFamily="@font/reso"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorNonText"
                android:textCursorDrawable="@null"
                android:hint="@string/hint_enter_confirm_password"
                android:inputType="textPassword"
                tools:ignore="Autofill"/>

    </LinearLayout>

        <Button
                android:id="@+id/button_dangki_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/create_account"
                android:textSize="15sp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/reso"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="60dp"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>