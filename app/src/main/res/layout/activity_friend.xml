<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">
    <TextView android:id="@+id/action_bar_friend"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/action_bar_background"
              android:text="Bạn bè"
              android:textColor="#fff"
              android:gravity="center"
              android:padding="15dp"
              android:fontFamily="@font/reso"
              android:textSize="20sp"
              android:elevation="3dp"/>
    <EditText android:id="@+id/editText_search_friend"
              android:layout_width="wrap_content"
              android:layout_marginStart="20dp"
              android:layout_marginTop="10dp"
              android:layout_height="wrap_content"
              android:background="@drawable/search_background"
              android:layout_below="@id/action_bar_friend"
              android:layout_alignParentStart="true"
              android:layout_toStartOf="@id/image_icon_search_friend"
              android:hint="@string/search_friend"
              android:paddingStart="18dp"
              android:paddingTop="8dp"
              android:paddingEnd="18dp"
              android:paddingBottom="8dp"
              android:elevation="2dp"
              android:fontFamily="@font/reso"
              android:textSize="20sp"
              android:textColor="@color/colorPrimary"
              android:textColorHint="@color/colorNonText"
              android:textCursorDrawable="@null"
              android:lines="1"
              android:singleLine="true"
              android:inputType="text"
              android:imeOptions="actionSearch"/>

    <ImageView android:id="@+id/image_icon_search_friend"
               android:layout_width="wrap_content"
               android:layout_height="36dp"
               android:layout_alignTop="@id/editText_search_friend"
               android:layout_alignBottom="@id/editText_search_friend"
               android:layout_below="@id/action_bar_friend"
               android:layout_toStartOf="@id/imageView_addfriend"
               android:background="@drawable/search_icon_background"
               android:paddingEnd="10dp"
               android:paddingStart="7dp"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:src="@drawable/icon_search"/>

    <ImageView android:id="@+id/imageView_addfriend"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/icon_add_friend"
               android:layout_below="@id/action_bar_friend"
               android:layout_alignParentEnd="true"
               android:layout_marginEnd="5dp"
               android:layout_alignTop="@id/editText_search_friend"
               android:layout_alignBottom="@id/editText_search_friend"
               android:paddingTop="3dp"
               android:paddingBottom="1dp"/>

    <ListView
            android:id="@+id/listView_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_search_friend"
            android:layout_marginTop="15dp"
            android:layout_above="@id/linearLayout_nav"
            android:divider="#00000000"
            android:dividerHeight="1dp"/>

    <LinearLayout
            android:id="@+id/linearLayout_nav"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/img_chatroom_fr"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/icon_chatroom"
                   android:layout_gravity="center"
                   android:padding="15dp"
                   android:layout_weight="1"
                   android:background="@color/color25white"
                   android:transitionName="chatroom"/>
        <ImageView android:id="@+id/img_friend_fr"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/icon_friend"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:padding="15dp"
                   android:tint="@color/colorPrimaryLight"
                   android:transitionName="friend"/>
        <ImageView android:id="@+id/img_account_info_fr"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/icon_account_info"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:padding="15dp"
                   android:background="@color/color25white"
                   android:transitionName="account_info"/>
    </LinearLayout>
</RelativeLayout>