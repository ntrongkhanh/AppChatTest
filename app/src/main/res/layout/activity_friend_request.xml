<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <TextView
        android:id="@+id/action_bar_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_bar_background"
        android:text="Lời mời kết bạn"
        android:textColor="#fff"
        android:gravity="center"
        android:padding="15dp"
        android:fontFamily="@font/reso"
        android:textSize="20sp"
        android:elevation="3dp"/>
    <ProgressBar
        android:id="@+id/progress_friend_request"
        android:layout_below="@+id/action_bar_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />
    <ListView
        android:id="@+id/listVewLoimoiketban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar_request"/>




</RelativeLayout>